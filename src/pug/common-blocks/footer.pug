mixin footer()
	footer.footer.container(class=noFooterLine?"footer--no-line":"")
		if noFooterText == false
			.content-box.footer__top-row
				p.footer__text Get in touch
				h2.footer__title.animated-header
					span.animated-header__box
						span.animated-header__elem Contact
		.content-box.footer__bottom-row
			+animatedLine(class="footer__line")
			.footer__wrap
				a.footer__email(href="mailto:gemstone@gem.com") gemstone@gem.com
				ul.footer__social
					li.footer__social-elem
						a.footer__social-link(href="https://instagram.com", target="_blank", rel="noreferrer") Instagram
					li.footer__social-elem
						a.footer__social-link(href="https://t.me", target="_blank", rel="noreferrer") telegram
			p.footer__year Â©2023
